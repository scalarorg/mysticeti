# Mysticeti Docker Network Configuration
# Copy this file to .env and modify as needed

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
NETWORK_GATEWAY=172.20.0.1

# Node IP Addresses
NODE0_IP=172.20.0.10
NODE1_IP=172.20.0.11
NODE2_IP=172.20.0.12
NODE3_IP=172.20.0.13

# Peer Addresses for each node
# Node 0 knows about nodes 1, 2, 3
PEER_ADDRESSES_NODE0=172.20.0.11:26657,172.20.0.12:26657,172.20.0.13:26657

# Node 1 knows about nodes 0, 2, 3
PEER_ADDRESSES_NODE1=172.20.0.10:26657,172.20.0.12:26657,172.20.0.13:26657

# Node 2 knows about nodes 0, 1, 3
PEER_ADDRESSES_NODE2=172.20.0.10:26657,172.20.0.11:26657,172.20.0.13:26657

# Node 3 knows about nodes 0, 1, 2
PEER_ADDRESSES_NODE3=172.20.0.10:26657,172.20.0.11:26657,172.20.0.12:26657

